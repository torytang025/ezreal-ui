#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run these commands only if packages/token changed
if git diff --quiet HEAD@{1} HEAD packages/token; then
  echo "ğŸ“¦ packages/token not changed, skipping build"
  exit 0
fi

echo "ğŸ“¦ packages/token changed, building..."
cd packages/token
pnpm run build
